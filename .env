# The database to persist to.
PROVENDB_PROXY_DATABASE=provendb
# The provendb-proxy image to use.
PROVENDB_PROXY_IMAGE=ghcr.io/southbanksoftware/provendb-proxy:latest
# Local directory to mount to the data volume.
PROVENDB_PROXY_MONGO_DATA_MOUNT=./provendb-data
# The port the container will expose.
PROVENDB_PROXY_MONGO_EXPOSE_PORT=27017
# This is the main database where the proxy will persist it's data.
PROVENDB_PROXY_MONGO_IMAGE=mongo:4.2.0


# image tags
TAG_CONCIERGE=prd
TAG_TREE=prd
TAG_ANCHOR=prd


DOCKER_REPO_CONCIERGE=southbanksoftware/provendb-concierge
DOCKER_REPO_PROXY=southbanksoftware/provendb-proxy
DOCKER_REPO_TREE=southbanksoftware/provendb-tree
DOCKER_REPO_ANCHOR=southbanksoftware/provendb-anchor

MONGO_DB_DATA=./data

CHAINPOINT_NODE=http://35.235.91.33

#PROVENDB_IGNORE_COLLECTIONS=sessions
PROVENDB_IGNORE_COLLECTIONS=''

# Parameters you can override in docker-app

PORT_CONCIERGE=10001
PORT_PROXY=27018
PORT_TREE=10000

# MongoDB database port and host.  For the internal Docker 
